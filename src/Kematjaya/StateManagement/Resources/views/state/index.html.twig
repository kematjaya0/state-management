{% extends '@KmjState/base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="page-title">
        <h3 class="breadcrumb-header">{{title}}</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <a href="{{path('kematjaya_state_create')}}" class="btn btn-default btn-sm pull-right"><span class="fa fa-plus"></span> {{'create'|trans}}</a>
                        <h4 class="panel-title">{{ 'list'|trans }} {{title}}</h4>
                        
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive invoice-table">
                            
                            {% include '@KmjState/_flashes.html.twig' %}
                            
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{'obj_class'|trans}}</th>
                                        <th>{{'code'|trans}}</th>
                                        <th>{{'name'|trans}}</th>
                                        <th>{{'sequence'|trans}}</th>
                                        <th>{{'actions'|trans}}</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {{include('@KmjState/state/_filters.html.twig')}}
                                    {% for kmj_state in pagers.currentPageResults %}
                                    <tr>
                                        <td>{{kmj_state.objClass}}</td>
                                        <td>{{kmj_state.code}}</td>
                                        <td>{{kmj_state.name}}</td>
                                        <td>{{kmj_state.sequence}}</td>
                                        <td>
                                            {% include("@KmjState/state/_list_actions.html.twig") %}
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5s">{{'no_data'|trans}}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            
                            {{ include('@KmjState/state/_list_footer.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}