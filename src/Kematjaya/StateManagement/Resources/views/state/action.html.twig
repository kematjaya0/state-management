{% extends '@KmjState/base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="page-title">
        <h3 class="breadcrumb-header">{{title}}</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <a href="{{path('kematjaya_state_index')}}" class="btn btn-primary btn-sm pull-right"><span class="fa fa-list"></span> {{ 'back'|trans }}</a>
                        <a href="{{path('kematjaya_state_add_action', {id: kmj_state.id})}}" class="btn btn-default btn-sm pull-right"><span class="fa fa-plus"></span> {{'add_action'|trans}}</a>
                        <h4 class="panel-title">{{ 'detail'|trans }} {{title}}</h4>
                        
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive invoice-table">
                            
                            {{ include('@KmjState/_flashes.html.twig') }}
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'target'|trans }}</th>
                                        <th>{{ 'label'|trans }}</th>
                                        <th>{{ 'description'|trans }}</th>
                                        <th>{{ 'actions'|trans}}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for kmj_state_action in kmj_state.getKmjStateActions %}
                                    <tr>
                                        <td>{{(kmj_state_action.getTargetObj()) ? kmj_state_action.getTargetObj().name: '' }}</td>
                                        <td>{{kmj_state_action.label}}</td>
                                        <td>{{kmj_state_action.description}}</td>
                                        <td>
                                            {{ include('@KmjState/state/_list_action_actions.html.twig', {'kmj_state_action': kmj_state_action}) }}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}