<div class="panel panel-white">
    <div class="panel-heading clearfix">
        <h4>{{'list_logs'|trans}}</h4>
    </div>
    <div class="panel-body">
        <div class="table-responsive invoice-table">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>{{'created_at'|trans}}</th>
                    <th>{{'state'|trans}}</th>
                    <th>{{'user'|trans}}</th>
                    <th>{{'description'|trans}}</th>
                    <th>{{'ip_address'|trans}}</th>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>{{log.createdAt ? log.createdAt|date('d M Y H:i'): '' }}</td>
                            <td>
                                {{log.getPrevState() ? log.getPrevState().name : ''}} >> 
                                {{log.getState().name}} ( {{log.getState().getPtiGroup().name}} )
                            </td>
                            <td>{{log.getUserName()|upper}}</td>
                            <td>{{log.description}}</td>
                            <td>{{log.ipAddress}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
</div>